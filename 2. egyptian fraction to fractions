#include <stdio.h>
typedef struct fraction
{
    int n;  
    int d;  
} fraction;
fraction input ();
int cal_gcd (int a,int b);
fraction cal_fraction (int a,int b);
void output (fraction f);
int main ()
{
    fraction f;
    int n;
    printf ("Enter the number of set of fractions to calculate\n");
    scanf ("%d",&n);

    for (int i = 0; i < n; i++)
    {
        f = input ();
      
        fraction res = cal_fraction(f.n,f.d); 
        output (res);
    }
    return 0;  
}
fraction input ()
{
    fraction f;
    printf ("Enter the numerator and denominator\n");
    scanf ("%d %d",&f.n,&f.d);
    return f;
}
int cal_gcd (int a , int b)
{
    while (b != 0)
    {
        int temp = b;
        b = a % b;
        a = temp;  
    }
    return a;
}
fraction cal_fraction (int a, int b)
{
    fraction f;
    f.n = a + b;     
    f.d = a * b;       

    int gcd = cal_gcd(f.n,f.d);
    f.n /= gcd;
    f.d /= gcd;
    return f;
}
void output (fraction f)
{
    printf ("%d/%d\n", f.n, f.d); 
}
